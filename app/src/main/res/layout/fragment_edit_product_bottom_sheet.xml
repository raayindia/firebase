<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:paddingBottom="32dp"
    android:id="@+id/bottomSheet1"
    app:behavior_hideable="true"
    app:behavior_peekHeight="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/add_card"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Edit details"
                android:textColor="#1A4563"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/edit_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/clear" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#E3EAF6"/>
        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/linear_parent"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/editname"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawablePadding="8dp"
                        android:layout_gravity="start"

                        android:textColorHint="#6990AC"
                        android:fontFamily="@font/poppins_semibold"
                        android:hint="Name"
                        android:textSize="14dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:importantForAutofill="no"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editdesignation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:hint="Designation"
                        android:importantForAutofill="no"
                        android:paddingLeft="10dp"
                        android:textColorHint="#6990AC"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editphone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:maxLength="10"
                        android:inputType="phone"
                        android:textColorHint="#6990AC"
                        android:drawablePadding="8dp"
                        android:hint="Phone Number"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:importantForAutofill="no"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/editemail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:textColorHint="#6990AC"
                        android:hint="Email"
                        android:textSize="14dp"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="10dp"
                        android:importantForAutofill="no"
                        android:background="@drawable/edit_text_bg"
                        android:paddingLeft="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="311dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_marginTop="32dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/edit_cancelbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/bottom_buttonbg"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="CANCEL"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="#4894FE"
                    tools:ignore="MissingConstraints" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/buttonbackground"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cancelbtn"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="SAVE"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAllCaps="false"

                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>