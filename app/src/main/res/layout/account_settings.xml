<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4894FE">

        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"

            android:background="@drawable/button_bg2"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow" />
        </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image"
        android:src="@drawable/img_3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />



<TextView
    android:id="@+id/Name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Naresh Trehan"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/circle_image"
    android:fontFamily="@font/poppins_semibold"
    android:textColor="@color/white"
    android:textSize="20dp"
    tools:ignore="MissingConstraints" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
             app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Name"
                android:orientation="vertical">
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_bg2"
        android:backgroundTint="@color/white">

        <ImageView
            android:layout_width="24dp"
        android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
        android:src="@drawable/settings"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/settings"
                android:layout_width="247dp"
                android:layout_height="22dp"
            android:layout_gravity="center"
                android:background="@drawable/button_bg2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:text="Account Settings"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#4894FE"
                android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg2"
        android:backgroundTint="@color/white">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/history"/>
                <TextView
                    android:id="@+id/history"
                    android:layout_width="247dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@drawable/button_bg2"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Family Membersâ€™\nMedication History "
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#4894FE"
android:layout_marginLeft="10dp"
                    android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg2"
        android:backgroundTint="@color/white">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/payment"/>
                <TextView
                    android:id="@+id/payment"
                    android:layout_width="247dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_bg2"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Payment Settings"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#4894FE"

                    android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg2"
        android:backgroundTint="@color/white">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/privacy" />
                <TextView
                    android:id="@+id/privacy"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="247dp"
                    android:layout_height="22dp"
                  android:layout_gravity="center"
                    android:background="@drawable/button_bg2"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Privacy Policy"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#4894FE"
                    android:textAllCaps="false" />
    </LinearLayout>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="107dp"
        android:gravity="center"
        android:layout_marginBottom="33dp"
        tools:ignore="MissingConstraints">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/logout"/>
            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
         android:layout_marginLeft="10dp"

                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
    </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>