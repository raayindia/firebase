<layout>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cardclick"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/baseline_personicon"
            android:text="" />






    <TextView
        android:id="@+id/textViewMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableStart="@drawable/baseline_call_24"
        android:layout_marginTop="10dp"
        android:text="" />




        <TextView
            android:id="@+id/textViewDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/baseline_medical_information"
            android:text="" />
        <TextView
            android:id="@+id/textViewJoinDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:text=" " />

        <TextView
            android:id="@+id/textViewDischargeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:text="  " />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/feedbackButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Feedback"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:background="@drawable/rectangle_border"/>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/callbutton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="call"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/rectangle_border"
            android:drawableStart="@drawable/baselinecall"
            android:textColor="@color/white" />
    </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>
</layout>