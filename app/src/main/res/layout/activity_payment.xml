<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".PaymentActivity">




  <TextView
      android:id="@+id/textViewName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Hospital Name"
      android:textColor="@color/black"
      android:textStyle="bold"
      android:textSize="26dp"
      android:layout_marginTop="160dp"
      android:layout_marginStart="16dp" />


  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:id="@+id/edithospital"
      android:scaleType="center"
      android:text="jairam Hospitals"
      android:inputType="textPersonName"
      android:layout_below="@id/textViewName"
      android:layout_marginStart="18dp"
      android:layout_marginEnd="18dp"
      android:drawableStart="@drawable/baseline_local_hospital_24"
      android:layout_marginTop="10dp"
      android:textColor="@color/black"
      android:hint="Enter your  Hospital name"
      android:textColorHint="#D2D2D2"
      android:background="@drawable/boarder"
      />
  <EditText
      android:id="@+id/idEdtAmt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:scaleType="center"
      android:inputType="numberDecimal"
      android:layout_below="@id/edithospital"
      android:layout_marginStart="18dp"
      android:layout_marginEnd="18dp"
      android:layout_marginTop="10dp"
      android:textColor="@color/black"
      android:hint="Enter Minimum 100 Rupe.."
      android:textColorHint="#D2D2D2"
      android:background="@drawable/boarder">

  </EditText>
  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/paybutton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/edithospital"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="10dp"
      android:layout_marginTop="64dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="20dp"
      android:background="@drawable/buttonbackground"
      android:gravity="center"
      android:scaleType="center"
      android:text=" Go...Payment"
      android:textColor="@color/white"
      android:textStyle="bold" />
</RelativeLayout>

